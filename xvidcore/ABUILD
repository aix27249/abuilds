# ABUILD generated by mkpkg_generator.sh

pkgname=xvidcore
pkgver=1.3.2
pkgbuild=1
arch=("auto")

shortdesc=("Xvid (MPEG-4 Compliant Video Codec)")
longdesc=("Xvid is an ISO MPEG-4 compliant video codec. It is an open source project that is developed and maintained by people from all over the world. Xvid claims to be the best currently available MPEG-4 video codec solution, and it is free software. Homepage: http://www.xvid.org/")
tags=("libs media-libs")
source=("http://downloads.xvid.org/downloads/${pkgname}-${pkgver}.tar.bz2")
build_deps="glibc-solibs nasm"

build() {
  cd "${srcdir}/${pkgname}/build/generic"
  ./configure --prefix=/usr --prefix=/usr --libdir=/usr/lib$LIBDIRSUFFIX --mandir=/usr/man --sysconfdir=/etc
  make -j${numjobs}
}


after_build() {
  cd "${srcdir}/${pkgname}/build/generic"
  make DESTDIR="${pkgdir}" install

  #Fix dynamic libraries
  cd "${pkgdir}/usr/lib$LIBDIRSUFFIX"
  _mylib=$(basename libxvidcore.so.*)
  ln -sf ${_mylib} libxvidcore.so.4
  ln -sf ${_mylib} libxvidcore.so
}
