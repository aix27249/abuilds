pkgname=setxkbmap
pkgver=1.3.0
pkgbuild=2
arch=('auto')

shortdesc=('setxkbmap')
longdesc=('setxkbmap is part of X11. For more information about the X.Org Foundation (the providers of the X.Org implementation of the X Window System), see their website: http://www.x.org')

tags=('x11-apps xserver')

source=("http://xorg.freedesktop.org/archive/individual/app/setxkbmap-${pkgver}.tar.bz2")
build_deps="libxkbfile util-macros"


BUILD_SYSTEM='autotools'
BUILD_KEYS="--prefix=/usr --libdir=/usr/lib${LIBDIRSUFFIX} --sysconfdir=/etc --localstatedir=/var --infodir=/usr/info --mandir=/usr/man --with-xkb-config-root=/usr/share/X11/xkb --build=$ARCH-slackware-linux "
INSTALL_KEYS="DESTDIR=$pkgdir"

