pkgname=xhost
pkgver=1.0.6
pkgbuild=1
arch=('auto')

shortdesc=('xhost')
longdesc=('xhost is part of X11. For more information about the X.Org Foundation (the providers of the X.Org implementation of the X Window System), see their website: http://www.x.org')

tags=('x11-apps xserver')
buil_deps="libX11 libXmu"
source=("http://xorg.freedesktop.org/archive/individual/app/xhost-${pkgver}.tar.bz2")

BUILD_SYSTEM='autotools'
BUILD_KEYS="--prefix=/usr --libdir=/usr/lib${LIBDIRSUFFIX} --sysconfdir=/etc --localstatedir=/var --infodir=/usr/info --mandir=/usr/man --disable-static --with-fontrootdir=/usr/share/fonts --build=$ARCH-slackware-linux "
INSTALL_KEYS="DESTDIR=$pkgdir"

