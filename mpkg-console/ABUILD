# Build system
BUILD_KEYS="-DCMAKE_INSTALL_PREFIX=/usr"

build() {
	go_src_dir
	burn_patches
	mkdir build
	cd build
	cmake $BUILD_KEYS ../console
	make -j${numjobs}
	make install DESTDIR=${pkgdir}
}

after_build() {
