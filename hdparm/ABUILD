# ABUILD generated by mkpkg_generator.sh

pkgname=hdparm
pkgver=9.43
pkgbuild=1
arch=("auto")

shortdesc=("A shell utility for manipulating Linux IDE drive/driver parameters")
longdesc=("hdparm provides a command line interface to various hard disk ioctls supported by the Linux ATA/IDE device driver subsystem. This may be required to enable higher-performing disk modes. hdparm was written by Mark Lord.")

tags=("base sys-apps")
source=("http://downloads.sourceforge.net/sourceforge/hdparm/${pkgname}-${pkgver}.tar.gz")
build_deps="glibc-solibs"

build() {
  go_src_dir
  make -j${numjobs}
}

after_build() {
  go_src_dir

  mkdir -p ${pkgdir}/usr/bin
  make DESTDIR=${pkgdir} sbindir=/usr/bin install
  install -m755 contrib/idectl ${pkgdir}/usr/bin
  install -m755 contrib/ultrabayd ${pkgdir}/usr/bin

  install -D -m 0644 wiper/README.txt $pkgdir/usr/share/doc/wiper/README.txt
  install -D -m 0755 wiper/wiper.sh $pkgdir/usr/bin/wiper.sh

  #install license file
  install -D -m 644 LICENSE.TXT $pkgdir/usr/share/licenses/hdparm/LICENSE.TXT
}
