# Package metadata
pkgname=nwidgets
pkgver=0.17
pkgbuild=1
arch="auto"

# Package description
shortdesc=("NCurses widgets framework")
longdesc=("NCurses widgets framework.")

# Source URL
source=("git:git://github.com/aix27249/mpkg.git")

# Tags
tags="base sys-libs"
build_deps="mpkgsupport ncurses cmake"

# Build system
BUILD_KEYS="-DCMAKE_INSTALL_PREFIX=/usr \
-DSYSCONF_INSTALL_DIR=/etc \
-DLIB_SUFFIX=${LIBDIRSUFFIX} \
-DMAN_INSTALL_DIR=/usr/man"

build() {
	go_src_dir
	burn_patches
	mkdir build
	cd build
	cmake $BUILD_KEYS ../nwidgets
	make -j${numjobs}
	make install DESTDIR=${pkgdir}
}

