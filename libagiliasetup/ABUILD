# Package metadata
pkgname=libagiliasetup
pkgver=1.1
pkgbuild=1
arch=("auto")

# Package description
shortdesc=("AgiliaLinux OS installation library")
longdesc=("This library was splitted from agilia-gui-setup, mainly for non-GUI setup implementations.")

# Source URL
source=("git:git://github.com/aix27249/mpkg.git")

# Tags
tags="libs sys-libs"
# Many additional dependencies which are used indirectly during setup process.
adddep="bash>=4.0 wget e2fsprogs xfsprogs reiserfsprogs jfsutils btrfs-progs lvm2 mdadm rsync sed laptop-detect"
build_deps="mpkg-core mpkg-parted parted"

# Build system
BUILD_KEYS="-DCMAKE_INSTALL_PREFIX=/usr"

build() {
	go_src_dir
	burn_patches
	mkdir build
	cd build
	cmake $BUILD_KEYS ../libagiliasetup
	make -j${numjobs}
	make install DESTDIR=${pkgdir}
}

