# ABUILD generated by mkpkg_generator.sh

pkgname=tk
pkgver=8.6.0
pkgbuild=1
arch=("auto")

shortdesc=("A windowing toolkit for use with tcl")
longdesc=("Tk is an extension to Tcl that allows you to quickly and easily build X11 applications that have the look and feel of Motif apps.")
tags=("dev-lang tcl")
source=("http://downloads.sourceforge.net/sourceforge/tcl/tk${pkgver}-src.tar.gz")
build_deps="fontconfig glibc-solibs libX11 libXau libxcb libXdmcp libXext libXft libXrender libXScrnSaver tcl"

build() {
  cd ${srcdir}/tk${pkgver}/unix
  [[ $CARCH == "x86_64" ]] && BIT="--enable-64bit"
  ./configure --prefix=/usr --mandir=/usr/man --libdir=/usr/lib$LIBDIRSUFFIX --enable-threads $BIT
  make -j${numjobs}
}

after_build() {
  cd ${srcdir}/tk${pkgver}/unix

  make INSTALL_ROOT=${pkgdir} install install-private-headers
  ln -sf wish8.6 ${pkgdir}/usr/bin/wish

  # install license
  install -Dm644 license.terms ${pkgdir}/usr/share/licenses/${pkgname}/LICENSE
  # remove buildroot traces
  sed -i "s#${srcdir}#/usr/src#" ${pkgdir}/usr/lib$LIBDIRSUFFIX/tkConfig.sh
}
