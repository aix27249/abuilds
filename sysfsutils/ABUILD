pkgname=sysfsutils
pkgver=2.1.0
pkgbuild=2
arch=("auto")

shortdesc=("Utilities for the sysfs filesystem")
longdesc=("The purpose of this package is to provide a set of utilities for interfacing with sysfs, a virtual filesystem in Linux kernel versions 2.6+ that provides a tree of system devices. While a filesystem is a very useful interface, a library (libsysfs) is also included that will hopefully make it easier for applications to query system devices and their attributes.")

tags=("base sys-fs")

source=("http://downloads.sourceforge.net/sourceforge/linux-diag/${pkgname}-${pkgver}.tar.gz")

build_deps="glibc-solibs"


BUILD_SYSTEM="autotools"
BUILD_KEYS="--prefix=/usr --libdir=/usr/lib$LIBDIRSUFFIX --mandir=/usr/man --sysconfdir=/etc"
INSTALL_KEYS="DESTDIR=$pkgdir"

after_build() {
	rm ${pkgdir}/usr/lib${LIBDIRSUFFIX}/libsysfs.a
}
