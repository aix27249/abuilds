# ABUILD generated by mkpkg_generator.sh

pkgname=grep
pkgver=2.18
pkgbuild=2
arch=("auto")

shortdesc=("grep (print lines matching a pattern)")
longdesc=("This is GNU grep, the 'fastest grep in the west' (we hope). Grep searches through textual input for lines which contain a match to a specified pattern and then prints the matching lines.")

tags=("base sys-apps")

source=("ftp://ftp.gnu.org/gnu/${pkgname}/${pkgname}-${pkgver}.tar.xz")

build_deps="make gcc grep pcre texinfo"

BUILD_SYSTEM="autotools"

BUILD_KEYS="--prefix=/usr \
            --bindir=/bin \
            --infodir=/usr/info \
            --mandir=/usr/man \
            --without-included-regex"

INSTALL_KEYS="DESTDIR=${pkgdir}"

after_build() {
  mkdir -p ${pkgdir}/usr/bin
  ( cd ${pkgdir}/usr/bin
       ln -sf ../../bin/grep .
       ln -sf ../../bin/egrep .
       ln -sf ../../bin/fgrep .
  )
}

